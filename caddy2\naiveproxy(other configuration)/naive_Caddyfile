{
.........<省略>........
//全局模式http端口应用
    servers :88 {
        listener_wrappers {
            proxy_protocol //开启PROXY protocol接收
        }
        protocol {
            allow_h2c //开启h2c server支持
            experimental_http3 //开启http3 server支持
        }
    }
//全局模式https端口应用
    servers :7443 {
        listener_wrappers {
            proxy_protocol //开启PROXY protocol接收
            tls //https端口需加此参数，否则删除。
        }
        protocol {
            experimental_http3 //开启http3 server支持
        }
    }
}
